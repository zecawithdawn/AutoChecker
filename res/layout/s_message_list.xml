<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/s_m_course_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/smcourse"
        android:gravity="center"
        android:padding="5dp"
        android:text="course name"
        android:textColor="#1E6E37"
        android:textSize="13dp" />


    <RelativeLayout
        android:id="@+id/s_m_prof_info_rl"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/s_m_course_name"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/s_m_prof_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Main Text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/s_message_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_m_prof_name"
            android:text="Sub Text"
            android:textSize="9dp"

            />

    </RelativeLayout>


    <TextView
        android:id="@+id/s_message_number"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/snum"
        android:gravity="center"
        android:text=" 1 "
        android:textSize="10dp"
        android:textColor="#ffffff"
        />




</RelativeLayout>