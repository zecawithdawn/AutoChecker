<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/screen_bg"
    android:id="@+id/log_rl">

    <RadioGroup
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:id="@+id/log_rbg"
        >

        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생"
            android:id="@+id/log_srb"
            android:textColor="#000000"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="교수"
            android:id="@+id/log_prb"
            android:textColor="#000000"
            />
    </RadioGroup>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/log_idtf"
        android:paddingLeft="20dp"
        android:hint="아이디"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:background="#ffffff"
        android:textColorHint="#9eba40"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/log_pwtf"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:hint="비밀번호"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:background="#ffffff"
        android:password="true"
        android:textColorHint="#9eba40"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="로그인"
        android:id="@+id/log_loginbt"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="160dp"
        android:background="#9eba40"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="283dp"
        android:textColor="#000000"
        android:text="아이디저장"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_iscb"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="275dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동로그인"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="283dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log_alcb"
        android:checked="false"
        android:layout_below="@+id/log_loginbt"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="250dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text=""
        android:id="@+id/login_findidbt"
        android:textColor="#000000"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text=""
        android:layout_marginLeft="110dp"
        android:id="@+id/login_findpwbt"
        android:textColor="#000000"
        android:layout_marginTop="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text=" 있으셨나요?"
        android:layout_marginLeft="170dp"
        android:textColor="#000000"
        android:layout_marginTop="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:id="@+id/log_registerbt"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:id="@+id/log_letf"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="390dp"
        android:gravity="center_vertical|center_horizontal" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_pb"
        android:layout_marginTop="20dp"
        android:layout_below="@id/log_registerbt"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>
